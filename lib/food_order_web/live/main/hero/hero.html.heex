<section class="hero py-16" id={@id}>
    <div class="container mx-auto flex items-center justify-between">
        <div class="w-1/2" id="hero-info" data-role="hero-info">
            <h6 class="text-lg" id="hero-info-text" data-id="recomendation"><em>Make your order</em></h6>
            <h1 class="text-3xl md:text-6xl font-bold" data-id="cta">Right now!</h1>
            <button class="px-6 py-2 rounded-full text-white font-bold mt-5 btn-primary" data-id="cta-button">Order now</button>
        </div>
        <div class="w-1/2" id="hero-info-image">
            <img src={Routes.static_path(@socket, "/images/hero.svg" )} alt="">
        </div>
    </div>
</section>
